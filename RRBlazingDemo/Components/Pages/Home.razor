@page "/"

<PageTitle>Home</PageTitle>

<div class="pa-6">
    <RHeaderCard Header="Layout Components & Utility Classes"
                 Icon="design_services">
        <p class="text-body-1 ma-0">
            Comprehensive showcase of RR.Blazor layout components (RAppShell, RContent, RGrid, RSection) 
            and utility classes including spacing, layout, typography, effects, and theme variables.
        </p>
    </RHeaderCard>

    <!-- Layout Components Section -->
    <RSection Text="Layout Components"
              Icon="view_module"
              Class="mb-8">
        
        <!-- RAppShell Demo -->
        <RCard Text="RAppShell - Enterprise Application Shell"
               Icon="dashboard"
               Variant="CardVariant.Outlined"
               Class="mb-6">
            <div class="pa-4">
                <p class="text-body-2 mb-4">Zero-config setup with responsive, customizable business application shell.</p>
                <div class="bg-surface-elevated pa-4 rounded border-2 border-dashed">
                    <div class="text-caption text-muted">RAppShell Demo (conceptual - would wrap entire app)</div>
                    <div class="d-flex align-center justify-between pa-2 bg-primary text-on-primary rounded mt-2">
                        <span class="font-semibold">Application Dashboard</span>
                        <div class="d-flex gap-2">
                            <RAvatar Text="JD" Size="SizeType.Small" />
                        </div>
                    </div>
                    <div class="pa-4 text-center text-muted">
                        <span class="material-symbols-rounded text-h2">dashboard</span>
                        <p class="ma-0 mt-2">Main content area</p>
                    </div>
                </div>
            </div>
        </RCard>

        <!-- RContent Demo -->
        <RCard Text="RContent - Automatic Content Wrapper"
               Icon="article"
               Variant="CardVariant.Outlined"
               Class="mb-6">
            <div class="pa-4">
                <p class="text-body-2 mb-4">Smart positioning and responsive behavior for app shell layouts.</p>
                <RContent>
                    <div class="bg-success-light pa-4 rounded text-center">
                        <span class="material-symbols-rounded text-success">check_circle</span>
                        <p class="ma-0 mt-2 text-success">Content automatically positioned within RContent wrapper</p>
                    </div>
                </RContent>
            </div>
        </RCard>

        <!-- RGrid Demo -->
        <RCard Text="RGrid - Professional Responsive Grid"
               Icon="grid_view"
               Variant="CardVariant.Outlined"
               Class="mb-6">
            <div class="pa-4">
                <p class="text-body-2 mb-4">Responsive grid component with RR.Blazor patterns.</p>
                <RGrid Variant="GridVariant.Default">
                    <div class="grid-cols-1 grid-cols-1 md:grid-cols-2 grid-cols-lg-3 gap-4">
                        <div class="bg-primary-light pa-3 rounded text-center">
                            <span class="material-symbols-rounded">web</span>
                            <p class="ma-0 mt-1 text-sm">Grid Item 1</p>
                        </div>
                        <div class="bg-info-light pa-3 rounded text-center">
                            <span class="material-symbols-rounded">code</span>
                            <p class="ma-0 mt-1 text-sm">Grid Item 2</p>
                        </div>
                        <div class="bg-success-light pa-3 rounded text-center">
                            <span class="material-symbols-rounded">design_services</span>
                            <p class="ma-0 mt-1 text-sm">Grid Item 3</p>
                        </div>
                    </div>
                </RGrid>
            </div>
        </RCard>

        <!-- RSection Demo -->
        <RSection Text="RSection - Content Organization"
                  Icon="folder"
                  Class="shadow-md">
            <ChildContent>
                <div class="pa-4">
                <p class="text-body-2 mb-4">Professional content section with header, collapsible content, and footer areas.</p>
                <div class="d-grid grid-cols-1 grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="bg-warning-light pa-3 rounded">
                        <span class="material-symbols-rounded text-warning">lightbulb</span>
                        <p class="ma-0 mt-2 text-sm">Section content with consistent styling</p>
                    </div>
                    <div class="bg-error-light pa-3 rounded">
                        <span class="material-symbols-rounded text-error">star</span>
                        <p class="ma-0 mt-2 text-sm">Optional interactive features</p>
                    </div>
                </div>
            </div>
            </ChildContent>
            <FooterContent>
                <div class="pa-3 bg-surface border-t text-center">
                    <span class="text-caption text-muted">Section footer content</span>
                </div>
            </FooterContent>
        </RSection>
    </RSection>

    <!-- Spacing Utilities Section -->
