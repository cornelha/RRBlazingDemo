                    <div class="font-bold text-h5">font-bold - Bold Weight (700)</div>
                    <div class="font-black text-h5">font-black - Black Weight (900)</div>
                </div>
            </div>
        </RCard>

        <!-- Text Colors -->
        <RCard Text="Text Color Classes"
               Subtitle="Semantic color classes that adapt to theme"
               Icon="palette"
               Variant="CardVariant.Outlined"
               Class="mb-6">
            <div class="pa-4">
                <div class="d-grid gap-3">
                    <div class="text-primary text-h6">text-primary - Primary brand color</div>
                    <div class="text-secondary text-h6">text-secondary - Secondary text color</div>
                    <div class="text-muted text-h6">text-muted - Muted/disabled text</div>
                    <div class="text-success text-h6">text-success - Success state color</div>
                    <div class="text-warning text-h6">text-warning - Warning state color</div>
                    <div class="text-error text-h6">text-error - Error state color</div>
                    <div class="text-info text-h6">text-info - Information color</div>
                </div>
            </div>
        </RCard>
    </RSection>

    <!-- Visual Effects Section -->
