                <div class="mb-6">
                    <div class="text-h6 font-semibold">Responsive Grid Columns</div>
                    <div class="d-grid grid-cols-1 grid-cols-1 md:grid-cols-2 grid-cols-lg-4 gap-3">
                        <div class="pa-3 bg-primary-light rounded text-center text-sm">Col 1</div>
                        <div class="pa-3 bg-info-light rounded text-center text-sm">Col 2</div>
                        <div class="pa-3 bg-success-light rounded text-center text-sm">Col 3</div>
                        <div class="pa-3 bg-warning-light rounded text-center text-sm">Col 4</div>
                    </div>
                    <p class="text-caption text-muted mt-2">grid-cols-1 grid-cols-1 md:grid-cols-2 grid-cols-lg-4</p>
                </div>

                <div class="mb-6">
                    <div class="text-h6 font-semibold">Equal Width Columns</div>
                    <div class="d-grid grid-cols-3 gap-2">
                        <div class="pa-2 bg-error-light rounded text-center text-xs">A</div>
                        <div class="pa-2 bg-error-light rounded text-center text-xs">B</div>
                        <div class="pa-2 bg-error-light rounded text-center text-xs">C</div>
                    </div>
                    <p class="text-caption text-muted mt-2">grid-cols-3</p>
                </div>

                <div>
                    <div class="text-h6 font-semibold">Column Spanning</div>
                    <div class="d-grid grid-cols-4 gap-2">
                        <div class="col-span-2 pa-2 bg-primary-light rounded text-center text-xs">Spans 2</div>
                        <div class="pa-2 bg-info-light rounded text-center text-xs">1</div>
                        <div class="pa-2 bg-success-light rounded text-center text-xs">1</div>
                        <div class="pa-2 bg-warning-light rounded text-center text-xs">1</div>
                        <div class="col-span-3 pa-2 bg-error-light rounded text-center text-xs">Spans 3</div>
                    </div>
                    <p class="text-caption text-muted mt-2">col-span-2, col-span-3</p>
                </div>
            </div>
        </RCard>
    </RSection>

    <!-- Typography Section -->
    <RSection Text="Typography Utilities"
              Icon="text_fields"
              Class="mb-8">
        
        <!-- Text Sizes -->
        <RCard Text="Text Size Classes"
               Subtitle="text-h1 through text-caption, responsive text sizing"
               Icon="format_size"
               Variant="CardVariant.Outlined"
               Class="mb-6">
            <div class="pa-4">
                <div class="d-grid gap-3">
                    <div class="text-h1">text-h1 - Main Heading</div>
                    <div class="text-h2">text-h2 - Section Heading</div>
                    <div class="text-h3">text-h3 - Subsection Heading</div>
