                    <div class="text-h6 font-semibold">Align Items</div>
                    <div class="d-flex justify-around gap-4">
                        <div class="d-flex align-start gap-1 pa-2 bg-surface-elevated rounded h-20">
                            <div class="pa-1 bg-warning text-on-warning rounded text-xs">1</div>
                            <div class="pa-2 bg-warning text-on-warning rounded text-xs">2</div>
                            <span class="text-caption text-muted">align-start</span>
                        </div>
                        <div class="d-flex align-center gap-1 pa-2 bg-surface-elevated rounded h-20">
                            <div class="pa-1 bg-error text-on-error rounded text-xs">1</div>
                            <div class="pa-2 bg-error text-on-error rounded text-xs">2</div>
                            <span class="text-caption text-muted">align-center</span>
                        </div>
                        <div class="d-flex align-end gap-1 pa-2 bg-surface-elevated rounded h-20">
                            <div class="pa-1 bg-primary text-on-primary rounded text-xs">1</div>
                            <div class="pa-2 bg-primary text-on-primary rounded text-xs">2</div>
                            <span class="text-caption text-muted">align-end</span>
                        </div>
                    </div>
                </div>

                <!-- Gap Classes -->
                <div>
                    <div class="text-h6 font-semibold">Gap Classes</div>
                    <div class="d-grid grid-cols-1 grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="d-flex gap-1 pa-2 bg-surface-elevated rounded">
                            <div class="pa-2 bg-info rounded text-xs text-on-info">A</div>
                            <div class="pa-2 bg-info rounded text-xs text-on-info">B</div>
                            <span class="text-caption text-muted self-center ml-2">gap-1</span>
                        </div>
                        <div class="d-flex gap-4 pa-2 bg-surface-elevated rounded">
                            <div class="pa-2 bg-success rounded text-xs text-on-success">A</div>
                            <div class="pa-2 bg-success rounded text-xs text-on-success">B</div>
                            <span class="text-caption text-muted self-center ml-2">gap-4</span>
